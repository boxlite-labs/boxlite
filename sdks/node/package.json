{
  "name": "@boxlite/core",
  "version": "0.1.0",
  "description": "BoxLite - Embeddable micro-VM runtime for secure, isolated code execution",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:debug": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "napi prepublish -t npm && npm run build",
    "artifacts": "napi artifacts --npm-dir npm"
  },
  "napi": {
    "binaryName": "boxlite",
    "package": {
      "name": "@boxlite"
    },
    "targets": [
      "aarch64-apple-darwin",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu"
    ]
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.0.0-alpha.62",
    "@types/node": "^22.0.0",
    "typescript": "^5.2.0",
    "vitest": "^2.0.0"
  },
  "optionalDependencies": {
    "@boxlite/darwin-arm64": "0.1.0",
    "@boxlite/darwin-x64": "0.1.0",
    "@boxlite/linux-x64": "0.1.0",
    "@boxlite/linux-arm64": "0.1.0"
  },
  "keywords": [
    "boxlite",
    "sandbox",
    "container",
    "virtualization",
    "vm",
    "kvm",
    "hypervisor",
    "isolation",
    "security",
    "code-execution"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/boxlite-labs/boxlite.git",
    "directory": "sdks/node"
  },
  "bugs": {
    "url": "https://github.com/boxlite-labs/boxlite/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Dorian Zheng <dorian@boxlite.dev>",
  "dependencies": {
    "@node-rs/helper": "^1.6.0"
  }
}
